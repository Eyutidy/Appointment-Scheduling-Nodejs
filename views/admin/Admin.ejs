<script>
    // Get the appointment count and update the card title
    const appointmentCount = <%= appointments.length %>;
    document.getElementById("appointment-count").textContent = `${appointmentCount}`;
    // Function to delete an appointment
    function deleteAppointment(userId, date, time) {
  console.log("Deleting appointment with userId:", userId);

  fetch(`/appointments/${userId}?date=${date}&time=${time}`, { method: "DELETE" })
    .then((response) => {
      if (response.ok) {
        // Remove the appointment from the table
        const row = document.getElementById(userId);
        row.parentNode.removeChild(row);
        // Decrement the appointment count in the card title
        window.location.reload();
        appointmentCount--;
        document.getElementById("appointment-count").textContent = `(${appointmentCount})`;
       
      } else {
        throw new Error("Failed to delete the appointment");
      }
    })
    .catch((err) => {
      console.error(err);
      alert("The appointment is canceled!!");
    });
}

  </script>


