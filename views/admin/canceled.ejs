<script>
    // Get the appointment count and update the card title
    const appointmentCount = <%= deletedAppointments.length %>;
    document.getElementById("appointment-count").textContent = `${appointmentCount}`;
    // Function to delete an appointment

    function deleteAppointment(id) {
        console.log("Deleting appointment with id", id);

        fetch(`/DeletedAppointment/${id}`, { method: "DELETE" })
            .then(() => {
                // Remove the appointment from the table
                const row = document.getElementById(id);
                row.parentNode.removeChild(row);

                // Decrement the appointment count in the card title
                appointmentCount--;
                document.getElementById("appointment-count").textContent = `(${appointmentCount})`;
            })
            .catch((err) => {
                console.error(err);
                alert("Failed to delete appointment");
            });
    }
</script>

